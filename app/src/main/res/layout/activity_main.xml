<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="control.studio.com.control.MainActivity">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:id="@+id/tableLayout"
        android:layout_above="@+id/AlarmeID"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="44dp">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:layout_margin="10dp"
            android:layout_marginRight="5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/reedCimaAid"
                android:background="@drawable/redswitch"
                android:layout_column="0"
                android:layout_weight="0"
                android:adjustViewBounds="false"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp" />

            <Space
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/reedCimaBid"
                android:background="@drawable/redswitch"
                android:layout_column="0"
                android:layout_weight="0"
                android:adjustViewBounds="false"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp" />

            <Space
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/reedCimaCid"
                android:background="@drawable/redswitch"
                android:layout_column="0"
                android:layout_weight="0"
                android:adjustViewBounds="false"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp" />

            <Space
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/reedCimaDid"
                android:background="@drawable/redswitch"
                android:layout_column="0"
                android:layout_weight="0"
                android:adjustViewBounds="false"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/CimaAid"
                android:background="@drawable/cimaazul" />

            <Space
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/CimaBid"
                android:background="@drawable/cimavermelho" />

            <Space
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/CimaCid"
                android:background="@drawable/cimapreto" />

            <Space
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/CimaDid"
                android:background="@drawable/cimaroxo" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/BaixoAid"
                android:background="@drawable/baixoazul" />

            <Space
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/BaixoBid"
                android:background="@drawable/baixovermelho" />

            <Space
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/BaixoCid"
                android:background="@drawable/baixopreto" />

            <Space
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/BaixoDid"
                android:background="@drawable/baixoroxo" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:layout_margin="10dp" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/reedBaixoAid"
                android:background="@drawable/redswitch"
                android:layout_column="0"
                android:layout_weight="0"
                android:adjustViewBounds="false"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp" />

            <Space
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/reedBaixoBid"
                android:background="@drawable/redswitch"
                android:layout_column="0"
                android:layout_weight="0"
                android:adjustViewBounds="false"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp" />

            <Space
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/reedBaixoCid"
                android:background="@drawable/redswitch"
                android:layout_column="0"
                android:layout_weight="0"
                android:adjustViewBounds="false"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp" />

            <Space
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/reedBaixoDid"
                android:background="@drawable/redswitch"
                android:layout_column="0"
                android:layout_weight="0"
                android:adjustViewBounds="false"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp" />
        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/correnteID"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/AlarmeID"
        android:layout_alignEnd="@+id/AlarmeID" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/ExtraID"
        android:textOn="Extra On"
        android:textOff="Extra Off"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/AlarmeID"
        android:background="@drawable/sirenvermelha"
        android:layout_above="@+id/ExtraID"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Amper"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/correnteID"
        android:layout_toEndOf="@+id/correnteID" />

</RelativeLayout>
